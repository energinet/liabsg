/var/log/httpd/*_log {
        daily
	size 64k
        missingok
        rotate 2
        compress
        notifempty
        create 640 root root
        sharedscripts
        postrotate
                if [ -f /var/log/httpd/httpd.pid ]; then
                  kill -1 `cat /var/log/httpd/httpd.pid` 
                fi
        endscript
}
